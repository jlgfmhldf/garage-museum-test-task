@import '../../styles/variables.pcss';
@import '../../styles/fonts.pcss';

.Popup {
	display: block;
	background: var(--white);
}

.Popup__title {
	position: relative;
	background-color: #f3f3f3;
	padding-y: 28px 21px;
	padding-x: 48px;
	font-family: var(--helveticaNeueCyr);
	text-transform: uppercase;
	font-size: 17px;
	font-weight: 700;
	line-height: 1.41;
	letter-spacing: 1px;
	text-align: left;
	color: #262626;
	
	@media (--tablet) {
		padding-bottom: 17px;
	}
	
	@media (--mobile) {
		padding: 23px 20px;
	}
}

.Popup__content {
	padding: 40px 48px;
	
	@media (--mobile) {
		padding: 35px 20px;
	}
}

.Popup__close {
	display: block;
	position: absolute;
	top: 29px;
	right: 47px;
	size: 18px;
	cursor: pointer;
	
	&::before,
	&::after {
		content: '';
		display: block;
		background: #3e3e3e;
		size: 2px 24px;
	}
	
	&::before {
		transform: rotate(45deg) translate(3px, -8px);
	}
	
	&::after {
		transform: rotate(-45deg) translate(25px, -14px);
	}
	
	@media (--tablet) {
		top: 28px;
		right: 32px;
	}
	
	@media (--mobile) {
		top: 25px;
		right: 20px;
	}
}
