@import '../../styles/variables.pcss';

.Button {
	display: block;
	height: 48px;
	padding-x: 25px;
	background-color: #212121;
	border-style: none;
	color: var(--white);
	text-align: center;
	font-size: 17px;
	line-height: 48px;
	font-family: var(--helveticaNeueCyr);
	cursor: pointer;
	
	&_disabled {
		color: #b4b4b4;
		cursor: auto;
	}
	
	@media (--tablet) {
		padding-x: 24px;
		font-size: 15px;
	}
}
